<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="main_tab_bottom">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/bottom_text_color</item>
        <!-- 当前的文字太长，会以...表示 -->
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#ffffff</item>
        <item name="android:paddingTop">2.0dip</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <!-- 去按钮立体效果 -->
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">@dimen/bottom_tab_padding_drawable</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="hang_pai_button">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/textview_text_color</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingTop">2.0dip</item>
    </style>

    <style name="RatingStyle" parent="@android:style/Widget.RatingBar">
        <!--定义星星图片-->
        <item name="android:progressDrawable">@drawable/rating_bar</item>
        <!--根据自定义星星图片的大小，设置相应的值，否则可能显示不全-->
        <item name="android:minHeight">15dp</item>
        <item name="android:minWidth">15dp</item>
    </style>

    <style name="md_line">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">12dp</item>
        <item name="android:background">@color/border_clo</item>
    </style>
    <!-- view分割线样式 -->
    <style name="bg_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/green</item>
    </style>
    <!-- 订单字体设计 -->
    <style name="Typeface_ServiceType">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18dp</item>
    </style>
    <!-- 订单状态设计 -->
    <style name="State">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/border_clo</item>
        <item name="android:textSize">22dp</item>
    </style>
    <!-- 订单价格设计 -->
    <style name="price">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/hui</item>
        <item name="android:textSize">32dp</item>
    </style>

    <style name="buy_product_LinearLayout">
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">16.0dip</item>
        <item name="android:paddingRight">16.0dip</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>

    <style name="style_user_relativeLayout">
        <item name="android:minHeight">10.0dip</item>
    </style>

    <style name="style_user_text_view" parent="@android:style/Widget.Holo.TextView">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#ff697279</item>
        <item name="android:gravity">center|right</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">63.0dip</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="style_allorder_imageView" parent="@android:style/Widget.Holo.TextView">
        <item name="android:gravity">center|right</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:minWidth">63.0dip</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="style_user_edit_text">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#ff111213</item>
        <item name="android:textColorHint">#ffc8c9ca</item>
        <item name="android:gravity">right</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginLeft">80.0dip</item>
        <item name="android:layout_marginRight">20.0dip</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="yuesaotitle">
        <item name="android:textSize">20.0sp</item>
        <item name="android:textColor">#ff454545</item>
    </style>

    <style name="content">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">#ff949494</item>
    </style>

    <style name="MyRatingBar">
        <item name="android:progressDrawable">@drawable/food_ratingbar_full</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:isIndicator">true</item>
    </style>
    <style name="yan_styles_emergency" parent="@android:style/Widget.Holo.TextView">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#ff697279</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">63.0dip</item>
    </style>
    <style name="text_18_ffffff">
        <item name="android:textSize">18.0dip</item>
        <item name="android:textColor">#ffffffff</item>
    </style>

    <style name="text_16_666666">
        <item name="android:textSize">16.0dip</item>
        <item name="android:textColor">#ff666666</item>
    </style>

    <style name="sdw_white">
        <item name="android:shadowColor">#7fffffff</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">0.65</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

    <style name="sdw_79351b">
        <item name="android:shadowColor">#ff79351b</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>
                 <!--  自定义对话框使用  -->
    <style name="text_15_ffffff_sdw" parent="@style/sdw_79351b">
        <item name="android:textSize">15.0dip</item>
        <item name="android:textColor">#ffffffff</item>
    </style>

    <style name="text_15_666666_sdw" parent="@style/sdw_white">
        <item name="android:textSize">15.0dip</item>
        <item name="android:textColor">#ff666666</item>
    </style>

    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

</resources>
