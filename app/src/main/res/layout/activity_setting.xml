<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.administrator.myapplication.activity.SettingActivity">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#ffffff"
        android:id="@+id/set_toolbar">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更多设置"
            android:textSize="20sp"
            android:layout_gravity="center"/>
    </android.support.v7.widget.Toolbar>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#CCCCCC"
        android:id="@+id/tv_1"
        android:layout_below="@+id/set_toolbar"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="用户协议"
        android:textSize="30sp"
        android:gravity="center"
        android:id="@+id/tv_agreement"
        android:layout_below="@+id/tv_1" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/iv_agreement"
        android:layout_alignParentStart="true"
        android:src="@mipmap/agreement"
        android:layout_alignBottom="@+id/tv_agreement"
        android:layout_alignTop="@+id/tv_agreement" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/iv_into_agreement"
        android:layout_alignTop="@+id/tv_agreement"
        android:layout_alignParentEnd="true"
        android:src="@mipmap/sertting"
        android:layout_alignBottom="@+id/tv_agreement" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#CCCCCC"
        android:id="@+id/tv_2"
        android:layout_below="@+id/tv_agreement"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="常见问题"
        android:textSize="30sp"
        android:gravity="center"
        android:id="@+id/tv_problem"
        android:layout_below="@+id/tv_2"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_problem"
        android:src="@mipmap/problem"
        android:layout_alignTop="@+id/tv_problem"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/tv_problem"
        android:layout_alignEnd="@+id/iv_agreement" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_into_problem"
        android:layout_alignTop="@+id/tv_problem"
        android:layout_alignEnd="@+id/iv_into_agreement"
        android:src="@mipmap/sertting"
        android:layout_alignBottom="@+id/tv_problem"
        android:layout_alignStart="@+id/iv_into_agreement" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#CCCCCC"
        android:id="@+id/tv_3"
        android:layout_below="@+id/tv_problem"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="联系客服"
        android:textSize="30sp"
        android:gravity="center"
        android:id="@+id/tv_customer"
        android:layout_below="@+id/tv_3"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_customer"
        android:src="@mipmap/customer"
        android:layout_below="@+id/tv_3"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/tv_customer"
        android:layout_alignEnd="@+id/iv_problem" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_into_coutomer"
        android:src="@mipmap/sertting"
        android:layout_below="@+id/tv_3"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/tv_customer"
        android:layout_alignStart="@+id/iv_into_problem" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#CCCCCC"
        android:id="@+id/tv_4"
        android:layout_below="@+id/tv_customer"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="检查新版本"
        android:textSize="30sp"
        android:gravity="center"
        android:id="@+id/tv_new_version"
        android:layout_below="@+id/tv_4"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_new_version"
        android:src="@mipmap/new_version"
        android:layout_below="@+id/tv_4"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/tv_new_version"
        android:layout_alignEnd="@+id/iv_customer" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_into_new_version"
        android:src="@mipmap/sertting"
        android:layout_below="@+id/tv_4"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/tv_new_version"
        android:layout_alignStart="@+id/iv_into_coutomer" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#CCCCCC"
        android:id="@+id/tv_5"
        android:layout_below="@+id/tv_new_version"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="关于我们"
        android:textSize="30sp"
        android:gravity="center"
        android:id="@+id/tv_about"
        android:layout_below="@+id/tv_5"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_about"
        android:src="@mipmap/about"
        android:layout_below="@+id/tv_5"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/tv_about"
        android:layout_alignEnd="@+id/iv_new_version" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_into_about"
        android:src="@mipmap/sertting"
        android:layout_below="@+id/tv_5"
        android:layout_alignEnd="@+id/iv_into_new_version"
        android:layout_alignBottom="@+id/tv_about"
        android:layout_alignStart="@+id/iv_into_new_version" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#CCCCCC"
        android:id="@+id/tv_6"
        android:layout_below="@+id/tv_about"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="退出登录"
        android:textColor="#009966"
        android:textSize="30sp"
        android:gravity="center"
        android:id="@+id/tv_exit_login"
        android:layout_gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/iv_into_about"
        android:visibility="invisible"/>


</RelativeLayout>
