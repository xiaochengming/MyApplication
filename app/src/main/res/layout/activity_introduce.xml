<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.myapplication.activity.IntroduceActivity">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#ffffff"
        android:id="@+id/introduce_toolbar">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人介绍:"
            android:textSize="25sp"
            android:layout_gravity="center"/>
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/introduce_toolbar"
        android:id="@+id/relative_layout_introduce1">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/iv_introduce"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="7dp"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="显示名称"
            android:textSize="15sp"
            android:id="@+id/tv_in_name"
            android:layout_alignTop="@+id/iv_introduce"
            android:layout_toEndOf="@+id/iv_introduce"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="显示年龄"
            android:textSize="15sp"
            android:id="@+id/tv_in_age"
            android:layout_alignTop="@+id/tv_in_name"
            android:layout_toEndOf="@+id/tv_in_name"
            android:layout_marginLeft="40dp"/>
        <RatingBar
            style="@style/RatingStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingBar2"
            android:layout_below="@+id/tv_in_name"
            android:layout_alignStart="@+id/tv_in_name"
            android:numStars="5"
            android:isIndicator="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务过多少个家庭"
            android:textSize="15sp"
            android:id="@+id/tv_in_count"
            android:layout_below="@id/ratingBar2"
            android:layout_alignStart="@id/tv_in_name"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:textColor="#CCCCCC"
        android:id="@+id/text_view_introduct1"
        android:layout_below="@+id/relative_layout_introduce1"
        android:layout_centerHorizontal="true" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/relative_layout_introduce2"
        android:layout_below="@id/text_view_introduct1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人物介绍:"
            android:textColor="#02BB9D"
            android:textSize="15sp"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:id="@+id/text_view_introduct2"
        android:layout_below="@id/relative_layout_introduce2"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_introduct2"
        android:layout_centerHorizontal="true"
        android:id="@+id/relative_layout_introduce3">
        <jaydenxiao.com.expandabletextview.ExpandableTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etv_jie_shao"
            android:textSize="15sp"
            app:animDuration="200"
            android:padding="8dp"
            app:collapseExpandGrarity="right"
            app:contentTextColor="@color/gray"
            app:contentTextSize="14sp"
            app:maxCollapsedLines="2"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative_layout_introduce3"
        android:text="有关评论:"
        android:textSize="15sp"
        android:textColor="#02BB9D"
        android:id="@+id/tv_you_guan"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:id="@+id/text_view_introduct3"
        android:layout_below="@id/tv_you_guan"/>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lv_jie_shao"
        android:layout_below="@+id/text_view_introduct3"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/but_introduce" />
    <Button
        android:background="@drawable/button_style"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="预约"
        android:textSize="14sp"
        android:id="@+id/but_introduce"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>
