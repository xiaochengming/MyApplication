<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:id="@+id/horizontal_scrollView">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout"
            android:orientation="horizontal"
            android:background="#02BB9D">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="热度"
                    android:checked="true"
                    android:id="@+id/tv_degree_of_heat"
                    style="@style/hang_pai_button"
                    android:layout_marginLeft="5dp"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="保洁服务"
                    android:id="@+id/tv_cleaning_service"
                    style="@style/hang_pai_button"
                    android:layout_marginLeft="10dp"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="家电清洗"
                    android:id="@+id/tv_appliance_cleaning"
                    style="@style/hang_pai_button"
                    android:layout_marginLeft="10dp"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="家具保养"
                    android:id="@+id/tv_furniture_maintenance"
                    style="@style/hang_pai_button"
                    android:layout_marginLeft="10dp"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="保姆"
                    android:id="@+id/tv_nanny"
                    style="@style/hang_pai_button"
                    android:layout_marginLeft="10dp"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="月嫂"
                    android:id="@+id/tv_maternity_matron"
                    style="@style/hang_pai_button"
                    android:layout_marginLeft="10dp"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="更多"
                    android:id="@+id/tv_more"
                    style="@style/hang_pai_button"
                    android:layout_marginLeft="10dp"/>
            </RadioGroup>
        </LinearLayout>
    </HorizontalScrollView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/tv_split_line"
        android:background="#000000"
        android:layout_below="@id/horizontal_scrollView"
        />
    <com.example.administrator.myapplication.widget.RefreshListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_split_line"
        android:id="@+id/lv_hang">

    </com.example.administrator.myapplication.widget.RefreshListView>

</RelativeLayout>