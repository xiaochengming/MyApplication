<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.myapplication.activity.FastRegistrationActivity">
<android.support.v7.widget.Toolbar
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="#ffffff"
    android:id="@+id/fast_toolbar">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="快速注册"
        android:textSize="25sp"
        android:layout_gravity="center"/>
</android.support.v7.widget.Toolbar>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="为了保证服务质量，请先验证你的手机"
        android:id="@+id/tv_register1"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_below="@+id/fast_toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="手机号（只能为数字）："
        android:maxLength="11"
        android:background="@null"
        android:id="@+id/et_registration_phone"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_register1"
        android:layout_marginTop="35dp"
        android:width="270dp"
        android:layout_marginLeft="30dp"
        android:layout_alignEnd="@+id/et_code" />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:src="@mipmap/lh_phone_number"
        android:layout_alignTop="@+id/et_registration_phone"
        android:layout_alignBottom="@+id/et_registration_phone"
        android:id="@+id/imageView9" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="获取验证码"
        android:inputType="number"
        android:id="@+id/but_verification"
        android:layout_marginRight="10dp"
        android:background="@drawable/button_shape"
        android:layout_alignBottom="@id/et_registration_phone"
        android:layout_alignEnd="@+id/tv_register1"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="验证码："
        android:ems="10"
        android:background="@null"
        android:id="@+id/et_code"
        android:layout_below="@+id/but_verification"
        android:layout_alignParentStart="true"
        android:width="250dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="35dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="没有收到？"
        android:textSize="18sp"
        android:textColor="#009966"
        android:id="@+id/tv_receive"
        android:layout_marginRight="10dp"
        android:layout_alignTop="@+id/et_code"
        android:layout_alignEnd="@+id/tv_register1" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="密码："
        android:ems="10"
        android:background="@null"
        android:id="@+id/et_registration_pwd"
        android:layout_below="@+id/et_code"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="30dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="立即注册"
        android:background="@drawable/button_style"
        android:textColor="@android:color/white"
        android:id="@+id/but_register"
        android:layout_below="@+id/et_registration_pwd"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点击立即注册，即表示您同意"
        android:textSize="15sp"
        android:layout_marginLeft="35dp"
        android:id="@+id/tv_register2"
        android:layout_below="@+id/but_register"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/tv_fast_underline"
        android:background="#CCCCCC"
        android:layout_below="@+id/et_registration_phone"
         />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:id="@+id/tv_fast_underline2"
        android:layout_below="@+id/et_code"
         />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:id="@+id/tv_fast_underline3"
        android:layout_below="@+id/et_registration_pwd"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="《服务协议》"
        android:textSize="15sp"
        android:layout_above="@+id/fast_frame_layout"
        android:layout_toEndOf="@+id/tv_register2"
        android:id="@+id/textView14" />
        android:id="@+id/tv_service_agreement"
        android:layout_below="@+id/but_register"
        android:layout_toEndOf="@+id/tv_register2" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_register2"
        android:layout_centerHorizontal="true"
        android:id="@+id/fast_frame_layout"
        android:layout_alignParentBottom="true">

    </FrameLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView8"
        android:src="@mipmap/lh_password"
        android:layout_alignTop="@+id/et_registration_pwd"
        android:layout_alignEnd="@+id/imageView9"
        android:layout_above="@+id/but_register" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView10"
        android:src="@mipmap/lh_yanzheng_ma"
        android:layout_above="@+id/tv_fast_underline2"
        android:layout_alignEnd="@+id/imageView9"
        android:layout_alignTop="@+id/et_code" />

</RelativeLayout>
