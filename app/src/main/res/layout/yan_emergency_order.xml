<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/buy_product_LinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout

        android:id="@+id/rela"
        style="@style/style_user_relativeLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/board">


        <TextView
            android:layout_marginTop="-5dp"
            android:id="@+id/State"
            style="@style/yan_styles_emergency"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:text="状态" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/State"
            android:orientation="vertical">
            <View

                android:background="@color/black"
                android:id="@+id/bg_line_bottom"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <RelativeLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/board_middle">


                <ImageView
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="-3dp"
                    android:id="@+id/img_housekeeper_photo"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:layout_alignParentLeft="true"

                    android:src="@drawable/ic_launcher" />

                <TextView
                    android:id="@+id/price"
                    style="@style/yan_styles_emergency"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@+id/img_housekeeper_photo"
                    android:textColor="@color/black"
                    android:singleLine="true"
                    android:text="价格" />

                <TextView
                    android:id="@+id/Typeface_ServiceType"
                    style="@style/yan_styles_emergency"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/border_clo"
                    android:singleLine="true"
                    android:text="服务类型" />

                <TextView
                    android:id="@+id/order_dizhi"
                    style="@style/yan_styles_emergency"
                    android:layout_width="wrap_content"
                    android:layout_alignBottom="@+id/img_housekeeper_photo"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@+id/img_housekeeper_photo"
                    android:singleLine="true"
                    android:text="地址:" />

                <TextView
                    android:id="@+id/tv_address"
                    style="@style/yan_styles_emergency"
                    android:layout_alignBottom="@+id/order_dizhi"
                    android:layout_toRightOf="@+id/order_dizhi"
                    android:singleLine="true"
                    android:text="泉州南安康美镇" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/te_hour"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="9"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="时"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/te_minute"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="60"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="分"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/te_second"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="60"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="秒"
                    android:textSize="16dp" />

                <Button
                    android:layout_weight="1"
                    android:id="@+id/button_left"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_gravity="right"
                    android:background="@drawable/yan_button_green"
                    android:focusable="false"
                    android:text="@string/button_left" />

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:layout_weight="1"
                    android:id="@+id/button_right"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"

                    android:background="@drawable/yan_button_green"
                    android:focusable="false"
                    android:text="@string/button_right" />


            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/img_emergency"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@mipmap/yan_emergency" />
</RelativeLayout>