<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_gravity="center_vertical"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:padding="15dp">

        <ImageView
            android:id="@+id/img_photo"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_centerVertical="true"
            android:background="@drawable/img_border"
            android:padding="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher" />

        <RelativeLayout
            android:id="@+id/prod_list_item_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/img_photo"
            android:layout_toRightOf="@+id/img_photo"
            android:paddingLeft="9dp">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品信息"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_name"
                android:layout_marginTop="8dp"
                android:singleLine="true"
                android:text="￥"
                android:textColor="@android:color/holo_red_light"
                android:textSize="21sp"

                />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/price"
                android:layout_below="@id/tv_name"
                android:layout_toRightOf="@+id/price"
                android:paddingLeft="4dp"
                android:paddingTop="4dp"
                android:text="71.00"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/reminder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/price"
                android:layout_marginTop="10dp"
                android:text="温馨提示: "
                android:textColor="@color/border_clo"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_reminder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/reminder"
                android:layout_toRightOf="@+id/reminder"
                android:text="提示内容"

                android:textSize="10sp" />

        </RelativeLayout>


        <TextView
            android:id="@+id/introduction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/prod_list_item_right"
            android:text="简介:"
            android:textColor="@color/black"
            android:textSize="12sp" />

    </RelativeLayout>

    <View
        style="@style/bg_line"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
